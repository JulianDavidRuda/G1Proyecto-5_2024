#include <iostream>

using namespace std;

int main() {
    int opcion;

    do {
        
        cout << "=== Menú ===" << endl;
        cout << "1. Opción 1" << endl;
        cout << "2. Opción 2" << endl;
        cout << "3. Salir" << endl;
        cout << "Elija una opción: ";
        cin >> opcion;


        switch (opcion) {
            case 1:
                cout << "Opción 1 seleccionada" << endl;
                break;
            case 2:
                cout << "Opción 2 seleccionada" << endl;
                break;
            case 3:
                cout << "Saliendo..." << endl;
                break;
  
        }

        cout << endl; 

    } while (opcion != 3);

    return 0;
}
